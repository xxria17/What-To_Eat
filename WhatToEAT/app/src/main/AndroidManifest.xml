<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dohxxn.whattoeat">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/sheep"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sheep"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/banner_ad_unit_id"/>

        <activity android:name="com.dohxxn.whattoeat.Activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.dohxxn.whattoeat.Activity.AppInfoActivity" />
        <activity android:name="com.dohxxn.whattoeat.Roulette.RouletteActivity" />
        <activity android:name="com.dohxxn.whattoeat.Activity.CalcActivity" />
        <activity android:name="com.dohxxn.whattoeat.Activity.InputActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name="com.dohxxn.whattoeat.Activity.MainActivity">

        </activity>
    </application>

</manifest>