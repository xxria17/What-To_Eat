<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/scdream9"
                    android:text="@string/title_st"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.178"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/app_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/appinfo_st"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/go_to_calc_btn"
                    app:layout_constraintVertical_bias="1.0" />

                <View
                    android:id="@+id/go_to_random_btn"
                    android:layout_width="300dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="40dp"
                    android:alpha="0.3"
                    android:background="@drawable/random_btn_design"
                    android:backgroundTint="#E76B6A"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <View
                    android:id="@+id/go_to_input_btn"
                    android:layout_width="300dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:alpha="0.3"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/random_btn_design"
                    android:backgroundTint="#249C9A"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/go_to_random_btn" />

                <View
                    android:id="@+id/go_to_location_btn"
                    android:layout_width="300dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:alpha="0.3"
                    android:background="@drawable/random_btn_design"
                    android:backgroundTint="#9C27B0"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/go_to_input_btn" />

                <View
                    android:id="@+id/go_to_calc_btn"
                    android:layout_width="300dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:alpha="0.3"
                    android:background="@drawable/random_btn_design"
                    android:backgroundTint="#F7C400"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/go_to_location_btn" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="52dp"
                    android:text="@string/random_st"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/go_to_random_btn"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/go_to_random_btn" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/input_st"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/go_to_input_btn"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/go_to_input_btn" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="44dp"
                    android:text="@string/who_cash"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/go_to_calc_btn"
                    app:layout_constraintHorizontal_bias="0.8"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="@+id/go_to_calc_btn" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:text="@string/location_random_st"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/go_to_location_btn"
                    app:layout_constraintHorizontal_bias="0.27"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toTopOf="@+id/go_to_location_btn" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/random_st"
                    app:layout_constraintBottom_toBottomOf="@+id/go_to_random_btn"
                    app:layout_constraintStart_toStartOf="@+id/go_to_random_btn"
                    app:layout_constraintTop_toTopOf="@+id/go_to_random_btn"
                    app:layout_constraintVertical_bias="0.533"
                    app:srcCompat="@drawable/roulette" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/random_desc"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/go_to_random_btn"
                    app:layout_constraintEnd_toEndOf="@+id/go_to_random_btn"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/scdream9"
                    android:text="@string/question_mark"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="@+id/imageView"
                    app:layout_constraintStart_toStartOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/input_st"
                    app:layout_constraintBottom_toBottomOf="@+id/go_to_input_btn"
                    app:layout_constraintStart_toStartOf="@+id/go_to_input_btn"
                    app:layout_constraintTop_toTopOf="@+id/go_to_input_btn"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/roulette" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/who_cash"
                    app:layout_constraintBottom_toBottomOf="@+id/go_to_calc_btn"
                    app:layout_constraintStart_toStartOf="@+id/go_to_calc_btn"
                    app:layout_constraintTop_toTopOf="@+id/go_to_calc_btn"
                    app:layout_constraintVertical_bias="0.6"
                    app:srcCompat="@drawable/cashier" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintEnd_toEndOf="@+id/imageView2"
                    app:layout_constraintStart_toStartOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2"
                    android:contentDescription="@string/input_desc"
                    app:srcCompat="@drawable/edit" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/input_desc"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/go_to_input_btn"
                    app:layout_constraintEnd_toEndOf="@+id/go_to_input_btn"
                    app:layout_constraintHorizontal_bias="0.318"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/who_desc"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/go_to_calc_btn"
                    app:layout_constraintEnd_toEndOf="@+id/go_to_calc_btn"
                    app:layout_constraintHorizontal_bias="0.377"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/go_to_location_btn"
                    app:layout_constraintStart_toStartOf="@+id/go_to_location_btn"
                    app:layout_constraintTop_toTopOf="@+id/go_to_location_btn"
                    app:layout_constraintVertical_bias="0.533"
                    app:srcCompat="@drawable/location"
                    android:contentDescription="@string/location_st" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location_random_desc"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/go_to_location_btn"
                    app:layout_constraintEnd_toEndOf="@+id/go_to_location_btn"
                    app:layout_constraintHorizontal_bias="0.25"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView12"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>